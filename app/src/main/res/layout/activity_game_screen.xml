<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen3"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/exitArea"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#20FF5733"
        android:gravity="center"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/obstacleView1"
        android:layout_width="63dp"
        android:layout_height="410dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="548dp"
        android:background="#40FF5733"
        android:tag="obstacle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/skipToEndScreenButton" />

    <View
        android:id="@+id/obstacleView2"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginTop="252dp"
        android:background="#40FF5733"
        android:tag="obstacle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/obstacleView3"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginTop="104dp"
        android:background="#40FF5733"
        android:tag="obstacle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/characterSprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="186dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fastEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="343dp"
        tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/slowEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/blue_mushroom_enemy"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="468dp" />

        <ImageView
            android:id="@+id/bigEnemy"
            android:layout_width="128dp"
            android:layout_height="117dp"
            app:srcCompat="@drawable/mushroom_enemy"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/smallEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/powerupMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FF1744"
        android:background="#CCFFFFFF"
        android:padding="12dp"
        android:visibility="gone"
        android:gravity="center"
        android:textStyle="bold"
        android:shadowColor="#66000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/skipToEndScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip to End"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="39dp" />

    <include
        layout="@layout/activity_base_screen"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>