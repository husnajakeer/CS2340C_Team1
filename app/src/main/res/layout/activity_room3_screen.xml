<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen6">

    <TextView
        android:id="@+id/exitArea"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#40FF5733"
        android:gravity="center"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/obstacleView1"
        android:layout_width="133dp"
        android:layout_height="365dp"
        android:background="#40FF5733"
        android:tag="obstacle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/obstacleView2"
        android:layout_width="105dp"
        android:layout_height="353dp"
        android:background="#20FF5733"
        android:tag="obstacle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- enemies -->

    <ImageView
        android:id="@+id/characterSprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="186dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/p3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fastEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="343dp"
        tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/slowEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/blue_mushroom_enemy"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="468dp" />
        <ImageView
            android:id="@+id/bigEnemy"
            android:layout_width="128dp"
            android:layout_height="117dp"
            app:srcCompat="@drawable/mushroom_enemy"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/smallEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/powerupMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FF1744"
        android:background="#CCFFFFFF"
        android:padding="12dp"
        android:visibility="gone"
        android:gravity="center"
        android:textStyle="bold"
        android:shadowColor="#66000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/activity_base_screen"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>